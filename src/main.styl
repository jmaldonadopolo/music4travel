body
	background-color #21282E
	color #222
	font-size 16px

.logo
	height 54.5px
	width auto
	
.bg-blue
	background-color #183C76
	
.jumbotron
	background-image linear-gradient(rgba(36, 45, 52, 0.80), rgba(36, 45, 52, 0.80)), url('cover.jpg')
	background-position bottom center
	background-repeat no-repeat
	background-size cover
	border-radius 0rem
	color white
	margin-bottom 0rem

.fa-whatsapp, .fa-facebook, .fa-twitter-square
	font-size 1.8rem
	margin-right 1rem
	
.fa-whatsapp
	color #00E676
	
.fa-facebook
	color #4267B2
	
.fa-twitter-square
	color #1DA1F2
	
.btn-primary
	background-color #183C76
	border-color #183C76
	&:hover
		background-color #183C76
		border-color #183C76
		
.btn-primary:not(:disabled):not(.disabled):active
	background-color #183C76
	border-color #183C76
	
.btn-primary:not(:disabled):not(.disabled):active:focus
	box-shadow none
	
.fan
	vertical-align sub
	margin-bottom 2rem
	
.event-next
	border solid 1px rgba(203, 182, 137, 0.26)
	border-radius 1rem
	padding 1.5rem

.show
	color #CBB689
	
.show-logo
	border solid 1px #CBB689
	border-radius 100%
	height 80px
	width auto
	
#getting-started
	font-size 2rem
	
.box-1
	background-color #183C76
	color white
	padding 1.5rem
	
.box-2
	background-color #8A0CE8
	color white
	padding 1.5rem
	
.box-3
	background-color #E87E0C
	color white
	padding 1.5rem
	
.fa-ticket-alt,
.fa-plane,
.fa-bus,
.fa-taxi
	font-size 3rem
	
.footer
	background-color #21282E
	padding 1.5rem 0rem
	& h4
		color white
	& a
		color white
	& .social-text
		font-family 'Roboto'
		font-size 1rem
	& .lead
		font-size 1.5rem